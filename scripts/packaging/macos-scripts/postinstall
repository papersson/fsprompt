#!/bin/bash
# Post-installation script for fsPrompt

# Ensure the binary is executable
chmod 755 /usr/local/bin/fsprompt

# Create a simple test to verify installation
if [ -x /usr/local/bin/fsprompt ]; then
    echo "fsPrompt installed successfully!"
    echo "You can now run 'fsprompt' from the terminal."
else
    echo "Warning: fsPrompt installation may have failed."
    exit 1
fi

exit 0